<div class="container">

<ol class="breadcrumb">
	<li><%= link_to "Home", root_path %></li>
	<li><%= link_to "Back to wikis", wikis_path %></li>
	<li class="active"><%= @wiki.id %></li>
</ol>

<div class="panel panel-info">
	<div class="panel-heading">
		<h2 class="panel-title"><%= @wiki.title %></h2>
	</div>




	<div class="panel-body">

		<p><%= markdown_to_html @wiki.body %></p>

	</div>

	<% if @wiki.private? %>
	<hr class="divider">

	<div class="panel-body">

		<p>Private Wiki - Collaborators:</p>
		
		<% @wiki.users.each do |user| %>
			<ul>
				<li><small><%= link_to user.username, user %></small></li>
			</ul>
		
		<% end %>

	</div>
	<% end %>


	<div class="panel-footer">
	
	<small>created by <%= @user %> <%= time_ago_in_words(@wiki.created_at) %> ago, updated <%= time_ago_in_words(@wiki.updated_at) %> ago.</small>
	
	<% if @wiki.private? %>
		<p>This is a <span class="badge">Private Wiki</span></p>
	<% end %>
	
	</div>
</div>

<%= link_to "Update", edit_wiki_path(@wiki), class: "btn btn-success" %>

</div>