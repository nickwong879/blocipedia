<div class="container">
	<div class="page-header">
		<h1>Create a new wiki<small> ...go on, you know you want to</small></h1>
	</div>


<div class="row">
	<div class="col-md-8">

	<%= form_for @wiki do |f| %>

		<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :body %>
			<%= f.text_area :body, rows: 12, class: 'form-control' %>
		</div>


		
		<% if current_user.role == 'admin' || current_user.role == 'premium' %>
		

		<!--This is the code for toggle buttons I want to integrate-->

			<div class="form-group">
		      <%= f.label :private, class: 'check_box' do %> Make Private
		      <%= f.check_box :private %>
		      <% end %>
		      
			</div>

		<!--This is the end of the code for toggle buttons I want to integrate-->

		<% end %>
	
	<hr class="divider">

		<div class="form-group">
			<%= f.submit "Save", class: 'btn btn-success' %>
		</div>

	<% end %>

	</div>
</div>

</div>